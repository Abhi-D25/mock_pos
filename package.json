{
  "name": "minghin-pos",
  "version": "1.0.0",
  "description": "Mock POS System for Ming Hin Cuisine",
  "main": "server/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "db:init": "node server/database/init.js",
    "build": "cd client && npm install && npm run build",
    "start": "npm run server",
    "railway:start": "npm run db:init && npm run start",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "pos",
    "restaurant",
    "mock"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "better-sqlite3": "^11.8.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
